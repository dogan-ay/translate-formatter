{
    "manifest_version": 3,
    "name": "Google Translate Formatter",
    "version": "1.1",
    "description": "test version",
    "action":{
        "default_popup": "index.html",
        "default_icon": {
            "16": "icon16.png"
        }


    },
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
      },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "content_scripts": [
        {
          "matches": ["https://translate.google.com/*"],
          "js": ["scripts/formatter.js"]
        }
    ]
   
  }